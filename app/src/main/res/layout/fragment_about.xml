<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:padding="10dp"
    tools:context="org.erickson_foundation.miltonhericksonfoundation.Fragments.WebView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:textStyle="bold"
            android:textSize="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/mhefBlue"
            android:gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_btn_go_to_erickson_website"
            android:text="@string/go_to_erickson_website"
            android:background="@color/mhefBlue"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_about_text"
            android:textColor="@color/black"
            android:text="Placeholder Text"
            android:padding="10dp"
            android:paddingBottom="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mhefBlue"
            android:textStyle="bold"
            android:text="About the App"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:id="@+id/txt_version_num"
            android:text="Placeholder Version #"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:text="App Icons obtained from Material Icons"/>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
