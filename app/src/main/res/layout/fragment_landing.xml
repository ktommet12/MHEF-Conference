<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/egg_white"
    android:gravity="center_horizontal"
    tools:context="org.erickson_foundation.miltonhericksonfoundation.Fragments.LandingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:src="@drawable/evo2017_logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_nav_schedule"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_button_mhef_blue"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/calendar_white"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="@string/schedule"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_nav_speakers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_button_mhef_blue"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/microphone_variant"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="@string/speakers"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_nav_map"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button_mhef_blue"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_language_white_24dp"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="@string/maps"
            android:textAllCaps="true"
            android:textColor="@color/white"

            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_nav_social_media"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:drawablePadding="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_button_mhef_blue"
            android:clickable="true"
            android:drawableTop="@drawable/calendar_white"
            android:text="@string/social_media"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/btn_nav_website"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            android:background="@drawable/round_button_mhef_blue"
            android:text="@string/website"
            android:layout_marginRight="30dp"
            android:drawableTop="@drawable/microphone_variant"/>
        <TextView
            android:id="@+id/btn_nav_syllabus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            android:textAllCaps="true"
            android:background="@drawable/round_button_mhef_blue"
            android:text="@string/syllabus"

            android:drawableTop="@drawable/ic_language_white_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_nav_parking_info"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_button_mhef_blue"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/calendar_white"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="@string/parking_info"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_nav_about"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_button_mhef_blue"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/microphone_variant"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="@string/about"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_nav_buy_tickets"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button_mhef_blue"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_language_white_24dp"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="@string/buy_tickets"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:clickable="true"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
