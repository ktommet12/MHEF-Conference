<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="org.erickson_foundation.miltonhericksonfoundation.Fragments.LandingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/youtube_player"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_nav_map"
            android:text="Map"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_info_outline_black_24dp"
            android:gravity="left|center_vertical" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_nav_schedule"
            android:text="Schedule"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_info_outline_black_24dp"
            android:gravity="left|center_vertical" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_nav_social_media"
            android:text="Twitter"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_info_outline_black_24dp"
            android:gravity="left|center_vertical" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_nav_about"
            android:text="About"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_info_outline_black_24dp"
            android:gravity="left|center_vertical" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News/Updates"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_info_outline_black_24dp"
            android:gravity="left|center_vertical" />
    </LinearLayout>
