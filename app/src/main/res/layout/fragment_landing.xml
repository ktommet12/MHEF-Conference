<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="org.erickson_foundation.miltonhericksonfoundation.Fragments.LandingFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <fragment
            android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
            android:id="@+id/youtubesupportfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_title"
            android:text="@string/placeholder_event_name"
            android:textColor="@color/black"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Schedule"
            android:paddingTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/calendar_white"
            android:textColor="@color/white"
            android:background="@drawable/round_button" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/map_white"
            android:paddingTop="20dp"
            android:text="Map"
            android:textColor="@color/white"
            android:background="@drawable/round_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Twitter"
            android:paddingTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/calendar_white"
            android:textColor="@color/white"
            android:background="@drawable/round_button" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/map_white"
            android:paddingTop="20dp"
            android:text="Map"
            android:textColor="@color/white"
            android:background="@drawable/round_button"/>
    </LinearLayout>

</LinearLayout>
