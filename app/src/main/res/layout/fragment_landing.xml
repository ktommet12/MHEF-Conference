<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="org.erickson_foundation.miltonhericksonfoundation.Fragments.LandingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/youtube_player"></FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/event_title"
            android:text="@string/placeholder_event_name"
            android:textColor="@color/black"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_nav_schedule"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Schedule"
            android:paddingTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/calendar_white"
            android:textColor="@color/white"
            android:background="@drawable/round_button" />
        <Button
            android:id="@+id/btn_nav_map"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/map_white"
            android:paddingTop="20dp"
            android:text="Map"
            android:textColor="@color/white"
            android:background="@drawable/round_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_nav_social_media"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Twitter"
            android:paddingTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/calendar_white"
            android:textColor="@color/white"
            android:background="@drawable/round_button" />
        <Button
            android:id="@+id/btn_nav_about"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/map_white"
            android:paddingTop="20dp"
            android:text="About"
            android:textColor="@color/white"
            android:background="@drawable/round_button"/>
    </LinearLayout>

</LinearLayout>
