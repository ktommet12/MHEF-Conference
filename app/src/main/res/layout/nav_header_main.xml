<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/mhefPurple"
    android:gravity="top"
    android:orientation="vertical"
    android:theme="@style/NavigationDrawer">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:onClick="goBackToConferenceSelector"
        android:background="@color/tw__transparent"
        android:src="@drawable/ic_keyboard_backspace_white_24dp"/>
    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"

        android:layout_gravity="center"
        android:src="@drawable/evolution_logo_no_text"/>
    <TextView
        android:id="@+id/lblConferenceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Placeholder Conference Title"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"/>
</LinearLayout>
