<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollContainer"
    android:orientation="vertical"
    android:background="@color/feedback_grey"
    tools:context="org.erickson_foundation.miltonhericksonfoundation.Fragments.FeedbackFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FEEDBACK"
        android:padding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/feedback_message"
        android:padding="10dp"
        android:background="@color/white"
        android:hint="Description"
        android:gravity="top|left"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_Info"
        android:text="Include Device Information"
        android:textSize="17dp"
        android:checked="true"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:buttonTint="@color/mhefPurple"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_submit_feedback"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/submit_btn" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_clear_feedback"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/clear_btn" />
    </LinearLayout>
</LinearLayout>
